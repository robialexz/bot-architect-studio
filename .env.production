# Production Environment Configuration for FlowsyAI
# This file ensures proper asset loading and styling in Vercel deployment

# App Configuration
VITE_APP_NAME=FlowsyAI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Performance and Styling
VITE_ENABLE_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true

# Asset Loading Configuration
VITE_ASSET_BASE_URL=/
VITE_CSS_PRELOAD=true
VITE_FONT_PRELOAD=true

# Animation and Visual Effects
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_BACKGROUND_ANIMATIONS=true
VITE_ENABLE_LUXURY_EFFECTS=true

# Build Optimization
VITE_CSS_MINIFY=true
VITE_JS_MINIFY=true
VITE_BUNDLE_ANALYZER=false

# Vercel Specific
VITE_DEPLOYMENT_PLATFORM=vercel
VITE_STATIC_ASSET_CDN=true
